---
interface Props {
  href: string
  name: string
}

const { name, href } = Astro.props
const { pathname } = Astro.url
---

<div>
  <a
    class=`inline-block overflow-hidden relative uppercase hover:text-white group ${pathname === href ? 'text-white' : ''}`
    data-magnet="scale"
    href={href}
    ><span
      class=`block before:[content:attr(data-hover)] before:italic before:font-['Octobre'] before:absolute before:top-full group-hover:-translate-y-full transition-transform duration-700 ${pathname === href ? '-translate-y-full' : ''}`
      data-hover={name}
    >
      {name}</span
    ></a
  >
</div>

